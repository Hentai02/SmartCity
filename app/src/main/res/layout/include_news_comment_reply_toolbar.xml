<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_comment_reply_toolbar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/et_news_reply"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_news_reply_edit"
        android:ems="10"
        android:hint="写评论"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxHeight="40dp"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_read_num"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_like_num"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_news_reply"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_news_comment" />

    <ImageView
        android:id="@+id/iv_like_num"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_collection_num"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_read_num"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:srcCompat="@drawable/ic_news_like" />

    <ImageView
        android:id="@+id/iv_collection_num"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_share_num"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_like_num"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_news_collection" />

    <ImageView
        android:id="@+id/iv_share_num"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_collection_num"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_news_share" />

    <TextView
        android:id="@+id/tv_news_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:text="123"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/iv_read_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_news_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:text="123"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/iv_like_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/imageView_placeholder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/iv_collection_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_placeholder2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/iv_share_num"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>